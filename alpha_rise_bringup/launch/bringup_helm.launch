<launch>

    <arg name="robot_name" default="changeme"/>

    <node ns="$(arg robot_name)" pkg="mvp_helm" type="helm" name="helm" output="screen">
        <!--
            Load the parameters for the MVP Helm
        -->
        <rosparam
            command="load"
            file="$(find alpha_rise_config)/mission/config/helm.yaml"/>

        <!--
            Load all the parameters for the behaviors.
        -->
        <rosparam command="load" ns="depth_tracking" file="$(find alpha_rise_config)/mission/param/depth_tracking.yaml"/>

        <rosparam command="load" ns="path_local" file="$(find alpha_rise_config)/mission/param/path_local.yaml"/>
        <param name="path_local/frame_id" value="$(arg robot_name)/world_ned"/>

        <rosparam command="load" ns="periodic_surfacing" file="$(find alpha_rise_config)/mission/param/periodic_surfacing.yaml"/>

        <!-- <rosparam command="load" ns="timer" file="$(find alpha_rise_config)/mission/param/timer.yaml"/> -->

    </node>

</launch>